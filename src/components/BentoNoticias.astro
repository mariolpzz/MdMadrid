import { db, Noticia, eq, and, desc } from "astro:db";

const noticiasTitulos = new Set(
  await db
    .select()
    .from(Noticia)
    .orderBy(desc(Noticia.fecha))
    .limit(14)
    .then((rows) =>
      rows.map((row) => {
        return row.titulo;
      })
    )
);

