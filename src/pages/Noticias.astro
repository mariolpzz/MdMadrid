  <Header />
  <main
    class=""
    style="background-color: #13151a;
    opacity: 1;
    background: repeating-linear-gradient( 45deg, #111216, #111216 20px, #13151a 20px, #13151a 100px );"
  >
    <Carroussel />
    <Destacadas />
    <BentoNoticias />
