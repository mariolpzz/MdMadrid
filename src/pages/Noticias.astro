---
import Layout from "../layouts/Layout.astro";
import Noticia1 from "../components/Noticia.astro";
import Carroussel from "../components/Carroussel.astro";
import Destacadas from "../components/Destacadas.astro";
import BentoNoticias from "../components/BentoNoticias.astro";
import Footer from "../components/Contact.astro";
import Header from "../components/Header.astro";

import { db, Noticia } from "astro:db";
const noticias = await db.select().from(Noticia);
---

